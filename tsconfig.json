{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2016",
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}